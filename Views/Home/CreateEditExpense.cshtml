@{
    ViewData["Title"] = "Create / Edit expense";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit an expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <input hidden class="form-content" type="number" placeholder="0" asp-for="Id">
    
    <label class="mt-4">Value in $</label>
    <input class="form-content" type="number" placeholder="0" asp-for="Value">
    
    <label class="mt-4">Description</label>
    <input class="form-content" type="text" placeholder="Enter description" asp-for="Description">
    
    <button class="btn btn-primary mt-4" type="submit">ADD</button>
</form>