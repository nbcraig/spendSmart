@{ 
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expense tracker</h1>
    
    @{
        if (Model.Count == 0)
        {
            <p>OOPS! No stored expenses!</p>
        }
        else
        { 
            <h1>The total amount of expenses is $@ViewBag.Expenses</h1>
            
            <hr />
            
            <table class="table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Value
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>

            <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                        <td>
                            @expense.Id
                        </td>
                        <td>
                            @expense.Value
                        </td>
                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>-
                        </td>
                    </tr>
                }
            }
            </tbody>
            </table>
        }
    }

</div>